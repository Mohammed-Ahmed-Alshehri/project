@model DepartmentAssessmentTypeMaster
@{
    ViewData["Title"] = "عرض التقييمات";
}

<head>

    <link rel="stylesheet" href="~/css/Addbranches.css" asp-append-version="true" />


</head>



<body style="background: linear-gradient(#1c4c64,#5590ad);">

    <div class="row">

        <div class="col-sm-3" style="z-index:2;">

            <div class="vertical-nav bg-white" id="sidebar">
                <div class="py-4 px-3 mb-4 bg-light">
                    <div class="media d-flex align-items-center">
                        <img src="~/@ViewBag.OrganizationImage" alt="..." width="65" class="mr-3 rounded-circle img-thumbnail shadow-sm">
                        <div class="media-body">
                            <h4 class="m-0">@ViewBag.OrganizationName</h4>
                        </div>
                    </div>
                </div>
                <h5> مرحبا بك @ViewBag.Username </h5>
                <p class="text-gray font-weight-bold text-uppercase px-3 small pb-4 mb-0">القائمة</p>

                <ul class="nav flex-column bg-white mb-0">
                    <li class="nav-item">
                        <a asp-controller="DepartmentUniversity" asp-action="Index" class="nav-link text-dark font-italic  ">
                            <i class="fa-solid fa-house "></i>
                            الصفحة الرئيسية
                        </a>
                    </li>


                    <li class="nav-item">
                        <a asp-controller="DepartmentUniversity" asp-action="ViewAcademicSupervisors" class="nav-link text-dark font-italic  ">
                            <i class="fa-solid fa-users-gear"></i>
                            إدارة المشرفين
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="DepartmentUniversity" asp-action="ViewStudents" class="nav-link text-dark font-italic ">
                            <i class="fa-solid fa-people-roof"></i>

                            إدارة الطلاب
                        </a>

                    </li>
                    <li class="nav-item">
                        <a asp-controller="DepartmentUniversity" asp-action="ViewAssessment" class="nav-link text-dark font-italic bg-light ">
                            <i class="fa-solid fa-chart-simple text-primary"></i>

                            تحديد التقييمات
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="DepartmentUniversity" asp-action="ViewSemesters" class="nav-link text-dark font-italic ">
                            <i class="fa-solid fa-door-closed"></i>

                            ادارة الشعب
                        </a>
                    </li>

                </ul>


            </div>


            <!-- End vertical navbar -->
            <!-- Page content holder -->
            <div class="page-content p-1" id="content">
                <!-- Toggle button -->
                <button id="sidebarCollapse" type="button" class="btn btn-light bg-white rounded-pill shadow-sm px-4 mb-4"><i class="fa fa-bars mr-2"></i><small class="text-uppercase font-weight-bold">القائمة</small></button>
            </div>


        </div>

        <div class="col-sm-7">
            <div class="card " style="border-radius: 25px; margin-top:2cm; margin-bottom:3cm; padding:5px 5px 5px 5px ; border-color:black;">
                <div class="card-header" style="text-align: center;">
                    <h3>عرض التقييمات</h3>


                    <a asp-controller="DepartmentUniversity" asp-action="ManageAssessment" class="table-search float-end">
                        <button class="btn " style="background-color:#1c4c64; color:white;font-size:18px" type="submit" asp>  اضافة/تعديل التقييمات <i class="fa fa-add"></i></button>
                    </a>

                </div>
                <div class="container">
                    <div id="content" class="content p-0">


                        <div class="profile-container">
                            <div class="row row-space-20">
                                <div class="col-md-6">
                                    <div class="tab-content p-0">
                                        <div class="tab-pane active show" id="profile-about">
                                            <table class="table  table table-borderless">
                                                <thead>
                                                    <tr>
                                                        <th colspan="2" style="font-size:22px">تفاصيل التقييم</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr>

                                                        <td class="value" style="font-size:20px">
                                                            <div class="m-b-5">
                                                                <b>عدد الساعات:</b> &nbsp;&nbsp;&nbsp;&nbsp;
                                                                <span class="text-muted">@Model.RequireCompletionHours</span>
                                                            </div>
                                                            <br />
                                                            <div>
                                                                <b>التاريخ:</b>&nbsp; &nbsp;&nbsp;&nbsp;
                                                                <span class="text-muted">@Model.StartActivationDate.ToShortDateString()</span>
                                                            </div>
                                                            <br />
                                                            <div class="m-b-5">
                                                                <b>درجة الاكاديمي:</b>&nbsp; &nbsp;&nbsp;&nbsp;
                                                                <span class="text-muted">@Model.AcademicSupervisorMarks</span>
                                                            </div>
                                                            <br />
                                                            <div class="m-b-5">
                                                                <b>درجةالتدريب:</b>&nbsp; &nbsp;&nbsp;&nbsp;
                                                                <span class="text-muted">@Model.TrainingSupervisorMarks</span>
                                                            </div>
                                                        </td>
                                                    </tr>


                                                </tbody>
                                            </table>

                                        </div>
                                    </div>
                                </div>


                                <div class="col-md-6 hidden-xs hidden-sm">
                                    <table class="table table table-sm">
                                        <thead>
                                            <tr>
                                                <th colspan="2" style="font-size:22px">تقييم الدرجات</th>
                                            </tr>

                                        </thead>


                                        <tbody id="Tbody" class="table-group-divider">
                                        </tbody>

                                    </table>


                                </div>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>



        <div class="col-sm-2"></div>
    </div>
</body>
@section Scripts{



    <script>



        //window.addEventListener("load", (event) => {

        //window.location.replace('Url.ActionLink("ViewAssessment")');

        //});

        document.addEventListener("load", (event) => {

            window.location.replace('@Url.ActionLink("ViewAssessment")');

        });

        $(function () {
            // Sidebar toggle behavior
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar, #content').toggleClass('active');
            });
        });

        getAssessmentTypeDetail();

        function getAssessmentTypeDetail() {
            var tab = "";


            $(document).ready(function () {
                $.ajax({
                    type: "GET",
                    url: "@Url.Action("getAssessmentTypeDetail")",
                    data: { id: @Model.DepartmentAssessmentTypeMasterId },

                    dataType: "json",
                    success: function (data) {
                        var body = '';

                        for (var i = 0; i < data.assessmentTypeDetail.length; i++) {

                            tab += `"<tr> <td>  ${data.assessmentTypeDetail[i].assessmentType.assessmentTypeName}</td> <td> ${data.assessmentTypeDetail[i].requiredMark} </td>
                                                                                                                                  </tr>`;

                        }

                        $("#Tbody").html(tab);


                    }
                });
            });


        }

        function DeleteAssessmentTypeDetail(Id) {


            Swal.fire({
                title: 'تأكيد حذف',
             
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'نعم احذف!',
                cancelButtonText: 'الغاء'
            }).then((result) => {
                if (result.isConfirmed) {

                    Swal.fire(
                        'Deleted!',
                        'Your file has been deleted.',
                        'success'
                    )
                }
            })


        }

    </script>


    }