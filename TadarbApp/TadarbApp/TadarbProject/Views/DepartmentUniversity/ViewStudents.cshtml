</style>

<partial name="_Notification" />
<body style="background: linear-gradient(#1c4c64,#5590ad);">

    <div class="row" style=" background-repeat: no-repeat;
            background-size: cover;
            height: 100vh; width: 100vw; /*padding:50px 5px 5px 5px;*/">

        <div class="col-sm-4" style="z-index:2;">

            <div class="vertical-nav bg-white" id="sidebar">
                <div class="py-4 px-3 mb-4 bg-light">
                    <div class="media d-flex align-items-center">
                        <img src="~/@ViewBag.OrganizationImage" alt="..." width="65" class="mr-3 rounded-circle img-thumbnail shadow-sm">
                        <div class="media-body">
                            <h4 class="m-0">@ViewBag.OrganizationName</h4>
                        </div>
                    </div>
                </div>
                <h5> مرحبا بك @ViewBag.Username </h5>
                <p class="text-gray font-weight-bold text-uppercase px-3 small pb-4 mb-0">القائمة</p>

                <ul class="nav flex-column bg-white mb-0">
                    <li class="nav-item">
                        <a asp-controller="DepartmentUniversity" asp-action="Index" class="nav-link text-dark font-italic  ">
                            <i class="fa-solid fa-house"></i>
                            الصفحة الرئيسية
                        </a>
                    </li>


                    <li class="nav-item">
                        <a asp-controller="DepartmentUniversity" asp-action="ViewAcademicSupervisors" class="nav-link text-dark font-italic  ">
                            <i class="fa-solid fa-users-gear"></i>
                            إدارة المشرفين
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="DepartmentUniversity" asp-action="ViewStudents" class="nav-link text-dark font-italic   bg-light  ">
                            <i class="fa-solid fa-user-graduate text-primary"></i>

                            إدارة الطلاب
                        </a>
                    </li>

                </ul>


            </div>


            <!-- End vertical navbar1 -->
            <!-- Page content holder1 -->
            <div class="page-content p-1" id="content">
                <!-- Toggle button1 -->
                <button id="sidebarCollapse" type="button" class="btn btn-light bg-white rounded-pill shadow-sm px-4 mb-4"><i class="fa fa-bars mr-2"></i><small class="text-uppercase font-weight-bold">القائمة</small></button>
            </div>

        </div>

        <div class="col-sm-6" style="margin-left:7cm;margin-right:10cm">
            <div class="card " style="border-radius: 25px;  margin-bottom:7cm;   border-color:black;width:130%">
                <div class="card-header" style="text-align: center;">
                    <h3> الطلاب الراغبين بالتدريب</h3>


                    <a asp-controller="DepartmentUniversity" asp-action="AddStudents" class="table-search float-end">
                        <button class="btn " style="background-color:#1c4c64; color:white;font-size:18px" type="submit" asp>  اضافة طالب جديد <i class="fa fa-add"></i></button>
                    </a>

                </div>


                <div class="row m-lg-6 mt-0" style="width:102.5%;border-radius: 25px;">
                    <div class="col-md-12 d-flex">

                        <div class="card card-table flex-fill">
                            <div class="card-header">
                                <h4 class="card-title float-start">
                                </h4>
                                <div class="table-search float-start">
                                    <button class="btn  btn-info" type="submit" onclick="FillTable()" style="color:black;border:0px;font-size:18px;">ظهور الكل</button>
                                </div>

                                <div class="col-sm-6">
                                   
                                    <input class="form-control" id="filterInput" type="text" placeholder="البحث بواسطة الاسم أو الرقم الجامعي" aria-label="default input example"> <br />

                                    <button class="btn  btn-outline-primary" type="submit" onclick="FillTableSearch()" style="background-color:#e6e291;color:black;border:0px;font-size:18px;">بحث</button>

                                    &nbsp;
                                    <div class="btn-group " role="group" aria-label="Basic radio toggle button group" style:"font-size:18px">


                                        <input type="radio" class="btn-check" name="btnradio" id="btnradio1" autocomplete="off" style="display:none" checked>
                                        <label class="btn btn-outline-primary" for="btnradio1" style="display:none"></label>

                                        
                                        <label class="btn btn-info rounded-end ">
                                            <input class="btn btn-info " type="radio" name="status" value="ذكر" onclick="ChangeGender('ذكر')"> الطلاب
                                        </label>

                                       

                                        <label class="btn rounded-start " style="background-color:#faa7e7">
                                            <input type="radio" name="status" value="انثى" onclick="ChangeGender('انثى')"> الطالبات
                                        </label>


                                        <input type="radio" class="btn-check" name="btnradio" id="btnradio1" autocomplete="off" style="display:none" checked>
                                        <label class="btn btn-outline-primary" for="btnradio1" style="display:none"></label>

                                       
                                    </div>
                                </div>

                            </div>


                            <div class="card-body">
                             

                                </div>
                                <div class="table-responsive no-radius">

                                    <table class="table table-striped table-bordered table-sm" cellspacing="0" width="100%" style="font-size:18px">
                                        <thead>
                                            <tr>

                                                <th>اسم الطالب</th>


                                                <th>الرقم الجامعي</th>

                                                
                                                <th> 
                                                    عدد الساعات
                                                    <i class="btn fa-solid fa-arrow-down-long float-l-start fa-xs p-0  " onclick="SortDwon()"> </i>  <i class=" btn fa-solid fa-arrow-up-long float-l-start fa-xs p-0" onclick="SortUp()"></i>
                                                </th>

                                                <th> الجنس </th>

                                                <th> المعدل التراكمي

                                                    <i class="btn fa-solid fa-arrow-down-long float-l-start fa-xs p-0  " onclick="SortDwongpa()"> </i>  <i class=" btn fa-solid fa-arrow-up-long float-l-start fa-xs p-0" onclick="SortUpgpa()"></i>
                                                </th>

                                                <th>رقم الهاتف</th>

                                                <th>البريد الالكتروني</th>
                                            </tr>

                                        </thead>

                                        <tbody id="Tbody">
                                        </tbody>


                                    </table>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="col-sm-2"></div>


                </div>
            </div>
        </div>
</body>
