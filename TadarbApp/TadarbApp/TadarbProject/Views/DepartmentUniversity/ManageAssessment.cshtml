@model AssessmentVM
@{
    ViewData["Title"] = "الصفحة الرئيسية";
}

<head>

    <link rel="stylesheet" href="~/css/Addbranches.css" asp-append-version="true" />


    <style>

        body {
            background-color: #525252;
        }

        .centered-form {
            margin-top: 100px;
        }

            .centered-form .panel {
                background: rgba(255, 255, 255, 0.8);
                box-shadow: rgba(0, 0, 0, 0.3) 20px 20px 20px;
            }
    </style>

</head>

<partial name="_Notification" />
<body style="background: linear-gradient(#1c4c64,#5590ad);">

    <div class="row" style=" background-repeat: no-repeat;
            background-size: cover;
            height: 100vh; width: 100vw; /*padding:50px 5px 5px 5px;*/">

        <div class="col-sm-4" style="z-index:2;">

            <div class="vertical-nav bg-white" id="sidebar">
                <div class="py-4 px-3 mb-4 bg-light">
                    <div class="media d-flex align-items-center">
                        <img src="~/@ViewBag.OrganizationImage" alt="..." width="65" class="mr-3 rounded-circle img-thumbnail shadow-sm">
                        <div class="media-body">
                            <h4 class="m-0">@ViewBag.OrganizationName</h4>
                        </div>
                    </div>
                </div>
                <h5> مرحبا بك @ViewBag.Username </h5>
                <p class="text-gray font-weight-bold text-uppercase px-3 small pb-4 mb-0">القائمة</p>

                <ul class="nav flex-column bg-white mb-0">
                    <li class="nav-item">
                        <a asp-controller="DepartmentUniversity" asp-action="Index" class="nav-link text-dark font-italic ">
                            <i class="fa-solid fa-house text-primary"></i>
                            الصفحة الرئيسية
                        </a>
                    </li>


                    <li class="nav-item">
                        <a asp-controller="DepartmentUniversity" asp-action="ViewAcademicSupervisors" class="nav-link text-dark font-italic  ">
                            <i class="fa-solid fa-users-gear"></i>
                            إدارة المشرفين
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="DepartmentUniversity" asp-action="ViewStudents" class="nav-link text-dark font-italic ">
                            <i class="fa-solid fa-user-graduate"></i>

                            إدارة الطلاب
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="DepartmentUniversity" asp-action="ManageAssessment" class="nav-link text-dark font-italic bg-light  ">
                            <i class="fa-solid fa-user-graduate"></i>

                            تحديد التقييمات
                        </a>
                    </li>

                </ul>


            </div>


            <!-- End vertical navbar -->
            <!-- Page content holder -->
            <div class="page-content p-1" id="content">
                <!-- Toggle button -->
                <button id="sidebarCollapse" type="button" class="btn btn-light bg-white rounded-pill shadow-sm px-4 mb-4"><i class="fa fa-bars mr-2"></i><small class="text-uppercase font-weight-bold">القائمة</small></button>
            </div>


        </div>

        <div class="col-sm-6">


            <div class="container">
                <div class="row centered-form">
                    <div class="col-xs-12 ">
                        <div class="panel panel-info">

                            <div class="panel-heading text-center">

                                <h1 class="panel-title">Add Content</h1>
                            </div>

                            <div class="panel-body">
                                <form role="form" >

                                    <div class="list_wrapper">
                                        <div class="row">

                                            <div class="col-xs-4 col-sm-4 col-md-4">

                                                <div class="form-group">
                                                    عدد الساعات المطلوبة
                                                    <input name="list[0][]" type="number" max="100" placeholder="Type Item Name" class="form-control" />

                                                </div>
                                            </div>
                                            <div class="col-xs-4 col-sm-4 col-md-4">

                                                <div class="form-group">
                                                    الدرجات المتاحة للمشرف الاكاديمي
                                                    <input name="list[0][]" type="number" placeholder="Type Item Name" class="form-control" />

                                                </div>
                                            </div>    <div class="col-xs-4 col-sm-4 col-md-4">

                                                <div class="form-group">
                                                    الدرجات المتاحة للمشرف التدريبي
                                                    <input name="list[0][]" type="number" placeholder="Type Item Name" class="form-control" />

                                                </div>
                                            </div>    <div class="col-xs-4 col-sm-4 col-md-4">

                                                <div class="form-group">
                                                    تاريخ اتاحة الفرصة
                                                    <input name="list[0][]" type="date" placeholder="Type Item Name" class="form-control" />

                                                </div>
                                            </div>


                                            <div class="col-xs-1 col-sm-1 col-md-1">
                                                <br>
                                                <button class="btn btn-primary list_add_button" type="button">+</button>
                                            </div>
                                        </div>
                                    </div>




                                    <input type="submit" value="Submit" class="btn btn-info btn-block">
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

        </div>
        <div class="col-sm-2"></div>
    </div>
</body>
@section Scripts{



    <script>

        $(function () {
            // Sidebar toggle behavior
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar, #content').toggleClass('active');
            });
        });


       

        $(document).ready(function () {
            var x = 0; //Initial field counter
            var list_maxField = 7; //Input fields increment limitation  

           
            

            //Once add button is clicked
            $('.list_add_button').click(function () {
                //Check maximum number of input fields
                var list_fieldHTML = "";
                 if(x < list_maxField){

                    $.ajax({
                        type: "GET",
                        url: "@Url.Action("ManageAssessmentajax")",


                        dataType: "json",
                        success: function (data) {

                            //console.log(data.assiment[0].assessmentTypeName);
                            list_fieldHTML += ' <div class="row"><div class="col-xs-4 col-sm-4 col-md-4"><div class="form-group"><label for="list[' + x + '][]">نوع التقييم</label> <select name="list[' + x + '][]" class="form-control"><option value="" selected disabled >--الرجاء اختار نوع التدريب--</<option><option value="' + data.assiment[0].assessmentTypeId + '">' + data.assiment[0].assessmentTypeName + '</option> <option value="' + data.assiment[1].assessmentTypeId + '">' + data.assiment[1].assessmentTypeName + '</option><option value="' + data.assiment[2].assessmentTypeId + '">' + data.assiment[2].assessmentTypeName + '</option> <option value="' + data.assiment[3].assessmentTypeId + '">' + data.assiment[3].assessmentTypeName + '</option> </select> </div></div><div class="col-xs-7 col-sm-7 col-md-7"> <label for="list[' + x + '][]">الدرجة المطلوبة</label><div class="form-group"><input name="list[' + x + '][]" type="text" placeholder="ادخل الدرجة المناسبة للتقييم" class="form-control"/></div></div> <div class="col-xs-1 col-sm-7 col-md-1"><label for="list[' + x + '][]"> حذف</label>   <div class="form-group">  <a href="javascript:void(0);" class="list_remove_button btn btn-danger">-</a>  </div> </div> </div>'; //New input field html
                            x++;  //Increment field counter

                            $('.list_wrapper').append(list_fieldHTML); //Add field html

                           
                           
                            //assessmentTypeName
                            //assessmentTypeId
                            }
                    });

                    


                }
            
                   
                  
                
            });

            //Once remove button is clicked
            $('.list_wrapper').on('click', '.list_remove_button', function () {
                $(this).closest('div.row').remove(); //Remove field html
                x--; //Decrement field counter
            });
        });


    </script>


    }