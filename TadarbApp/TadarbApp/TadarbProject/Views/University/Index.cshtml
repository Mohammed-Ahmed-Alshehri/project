@{
    ViewData["Title"] = "الصفحة الرئيسية";
}

<head>

    <link rel="stylesheet" href="~/css/Addbranches.css" asp-append-version="true" />


</head>

<partial name="_Notification" />
<body style="background: linear-gradient(#1c4c64,#5590ad);">

    <div class="row">

        <div class="col-sm-4" style="z-index:2;">

            <div class="vertical-nav bg-white" style="position:absolute" id="sidebar">
                <div class="py-4 px-3 mb-4 bg-light">
                    <div class="media d-flex align-items-center">
                        <img src="~/@ViewBag.OrganizationImage" alt="..." width="65" class="mr-3 rounded-circle img-thumbnail shadow-sm">
                        <div class="media-body">
                            <h4 class="m-0"> @ViewBag.OrganizationName  </h4>
                        </div>
                    </div>
                </div>
                <h5> مرحبا بك @ViewBag.Username </h5>

                <p class="text-gray font-weight-bold text-uppercase px-3 small pb-4 mb-0">القائمة</p>

                <ul class="nav flex-column bg-white mb-0">
                    <li class="nav-item">
                        <a asp-controller="University" asp-action="Index" class="nav-link text-dark font-italic bg-light">
                            <i class="fa fa-th-large mr-3 text-primary fa-fw"></i>
                            الصفحة الرئيسية
                        </a>
                    </li>
                    <li class="nav-item" id="fff"> 
                        <a asp-controller="University" asp-action="ViewSpecialities" class="nav-link text-dark font-italic ">
                            <i class="fa fa-address-card mr-3 text-primary fa-fw"></i>
                            إدارة مجالات التدريب
                        </a>
                    </li>
                    <li class="nav-item" id="ff2">
                        <a asp-controller="University" asp-action="ViewUsers" class="nav-link text-dark font-italic  ">
                            <i class="fa-solid fa-user-group "></i>
                            إدارة الموظفين

                        </a>
                    </li>
                    <li class="nav-item" id="ff3">
                        <a asp-controller="University" asp-action="ViewColleges" class="nav-link text-dark font-italic ">
                            <i class="fa fa-cubes mr-3 text-primary fa-fw"></i>
                            إدارة الكليات

                        </a>
                    </li>

                </ul>
                <div>
                    <a class="btn " id="btn1">
                        <i class="fa-solid fa-person-circle-question"></i>
                        احتاج مساعدة

                    </a>
                </div>


            </div>


            <!-- End vertical navbar -->
            <!-- Page content holder -->
            <div class="page-content p-1" id="content">
                <!-- Toggle button -->
                <button id="sidebarCollapse" type="button" class="btn btn-light bg-white rounded-pill shadow-sm px-4 mb-4"><i class="fa fa-bars mr-2"></i><small class="text-uppercase font-weight-bold">القائمة</small></button>
            </div>


        </div>

        <div class="col-sm-6">
           



            @*            content page 
            *@

        </div>
        <div class="col-sm-2"></div>
    </div>
</body>
@section Scripts{



    <script>
        $(function () {
            // Sidebar toggle behavior
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar, #content').toggleClass('active');
            });
        });


        // giude tour
        document.getElementById('btn1')
            .addEventListener('click', function (event) {
                event.stopPropagation();

                const driver = new Driver();
                // Define Steps

                animate: false
                driver.defineSteps([
                    {
                        element: '#fff',
                        popover: {
                            //className: 'first-step-popover-class',
                            title: 'أولاً : اضف المجالات  ',
                            description: 'الرجاء اضافة جميع المجالات  التي تمتلكها الجامعة .. علما بأن جميع المجالات والتخصصات المضافة هي التي ستظهر  للكلية ',
                            position: 'left',
                            closeBtnText: 'اغلق', // Text on the close button for this step
                            nextBtnText: 'التالي', // Next button text for this step
                            prevBtnText: 'السابق', // Previous button text for this step
                            doneBtnText: 'انتهيت', // Text on the final button


                        }
                    },
                    {
                        element: '#ff2',
                        popover: {
                            title: 'ثانياً : اضافة موظف مسؤول عن الكلية',
                            description: 'الرجاء اضافة المسؤول عن الكلية  ليتم تعيينه بالكلية المناسب لاحقاً',
                            position: 'left',
                            closeBtnText: 'اغلق', // Text on the close button for this step
                            nextBtnText: 'التالي', // Next button text for this step
                            prevBtnText: 'السابق', // Previous button text for this step
                            doneBtnText: 'انتهيت', // Text on the final button

                        }
                    },
                    {
                        element: '#ff3',
                        popover: {
                            title: 'ثالثاً : اضف الكليات  ',
                            description: 'الرجاء اضافة الكليات وتعيين مسؤول عن هذا الكلية , علما بان المجال المضاف بالكلية لا يعني حصر الكلية بتخصصات معينه ',
                            position: 'left',
                            closeBtnText: 'اغلق', // Text on the close button for this step
                            doneBtnText: 'انتهيت', // Text on the final button

                            nextBtnText: 'التالي', // Next button text for this step
                            prevBtnText: 'السابق', // Previous button text for this step
                        }
                    },

                ]);
                // Begin to guide
                driver.start();






            });
    </script>


    }