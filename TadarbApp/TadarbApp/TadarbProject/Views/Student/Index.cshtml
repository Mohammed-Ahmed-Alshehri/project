@model UniversityTraineeStudent



@{
    ViewData["Title"] = "الصفحة الرئيسية";
}

<head>

    <link rel="stylesheet" href="~/css/Addbranches.css" asp-append-version="true" />


</head>

<partial name="_Notification" />
<body style="background: linear-gradient(#1c4c64,#5590ad);">

    <div class="row" style=" background-repeat: no-repeat;
            background-size: cover;
            height: 100vh; width: 100vw; /*padding:50px 5px 5px 5px;*/">

        <div class="col-sm-4" style="z-index:2;">

            <div class="vertical-nav bg-white" id="sidebar">
                <div class="py-4 px-3 mb-4 bg-light">
                    <div class="media d-flex align-items-center">
                        <img src="~/@ViewBag.OrganizationImage" alt="..." width="65" class="mr-3 rounded-circle img-thumbnail shadow-sm">
                        <div class="media-body">
                            <h4 class="m-0">@ViewBag.OrganizationName</h4>
                        </div>
                    </div>
                </div>
                <h5> مرحبا بك @ViewBag.Username </h5>

                <p class="text-gray font-weight-bold text-uppercase px-3 small pb-4 mb-0">القائمة</p>

                <ul class="nav flex-column bg-white mb-0">
                    <li class="nav-item">
                        <a asp-action="index" class="nav-link text-dark font-italic bg-light">
                            <i class="fa-solid fa-house text-primary"></i>
                            الصفحة الرئيسية
                        </a>
                    </li>

                    <li class="nav-item">

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-address-card mr-3 text-primary fa-fw"></i>

                            إدارة الفرص

                        </a>
                        <div class="dropdown-menu" style="">

                            <a class="dropdown-item" asp-action="ViewOpportunities">عرض الفرص الجديدة </a>
                            <a class=" dropdown-item" asp-action="ViewOpportunitiesStatus"> عرض حالة القبول </a>

                        </div>

                    </li>

                    <li class="nav-item">
                        <a asp-controller="" asp-action="" class="nav-link text-dark font-italic ">
                            <i class="fa fa-address-card mr-3 text-primary fa-fw"></i>
                            ارفاق التقارير
                        </a>
                    </li>


                </ul>


            </div>


            <!-- End vertical navbar2 -->
            <!-- Page content holder2 -->
            <div class="page-content p-1" id="content">
                <!-- Toggle button2 -->
                <button id="sidebarCollapse" type="button" class="btn btn-light bg-white rounded-pill shadow-sm px-4 mb-4"><i class="fa fa-bars mr-2"></i><small class="text-uppercase font-weight-bold">القائمة</small></button>
            </div>


        </div>

        

        <div class="col-sm-6">
            <form asp-action="EditAccount" method="get">
                <div class="card " style="border-radius: 25px;  margin-bottom:3cm; padding:5px 5px 5px 5px ; border-color:black; width:auto; height:auto;" >
                <div class="card-header" >
                        <h3 style="text-align: center;">معلومات المتدرب</h3>
                        <input asp-for="@Model.TraineeId" hidden />

                        <button class="btn " style="text-align: right;" type="submit">  <i class="fa-solid fa-user-gear fa-2x"></i></button>
                    </div>
                    <br />
                    <div class="card-body row container">
                        <div class="container rounded p-3">
                            <div class="row">
                                <div class="col-12 col-lg-1 offset-lg-1 text-center">
                                   
                                </div>
                    <div class="col-12 col-lg-12" >

                        <div class="row text-center pl-2 " style="font-size:25px">
                            <div class="p-1 col-4 bg-secondary border-bottom">
                                <div>اسم المتدرب:</div>
                            </div>
                            <div class="p-1 col-4 bg-secondary border-bottom">
                             <div>المشرف الاكاديمي :</div>
                            </div>
                            <div class="p-1 col-4 bg-secondary border-bottom">
                                <div>الرقم الجامعي : </div>
                            </div>

                            
                        </div>

                                    <div class="row text-center pl-2" style="color:black; background-color:#C0C0C0
; font-weight:bold; font-size:19px">
                            <div class="p-1 col-4 ">
                                <div>@Model.user.FullName</div>
                            </div>
                            <div class="p-1 col-4 ">
                                <div>@Model.department.User.FullName</div>
                            </div>
                            <div class="p-1 col-4 ">
                                <div>@Model.UniversityStudentNumber</div>
                            </div>
                            
                        </div>
                                    <div class="row text-center pl-2 " style="font-size:25px">
                                        <div class="p-1 col-4 bg-secondary border-bottom">
                                            <div>الايميل الجامعي:</div>
                                        </div>
                                        <div class="p-1 col-4 bg-secondary border-bottom">
                                            <div>القسم :</div>
                                        </div>
                                        <div class="p-1 col-4 bg-secondary border-bottom">
                                            <div>التخصص:  </div>
                                        </div>


                                    </div>

                                    <div class="row text-center pl-4" style="color:black; background-color:#C0C0C0; font-weight:bold; font-size:19px">
                                        <div class="p-1 col-4 ">
                                            <div>@Model.user.UserEmail</div>
                                        </div>
                                        <div class="p-1 col-4 ">
                                            <div>@Model.department.DepartmentName</div>
                                        </div>
                                        <div class="p-1 col-4 ">
                                            <div>نظم معلومات</div>
                                        </div>

                                    </div>


                                    <div class="row text-center pl-2 " style="font-size:25px; "  >
                                        <div class="p-1 col-4 bg-secondary border-bottom">
                                            <div> المعدل التراكمي:</div>
                                        </div>
                                        <div class="p-1 col-4 bg-secondary border-bottom">
                                            <div>عدد الساعات :</div>
                                        </div>
                                        <div class="p-1 col-4 bg-secondary border-bottom">
                                            <div> المدينة </div>
                                        </div>


                                    </div>

                                    <div class="row text-center pl-4" style="color:black; background-color:#C0C0C0; font-weight:bold; font-size:19px">
                                        <div class="p-1 col-4 ">
                                            <div>@Model.GPA</div>
                                        </div>
                                        <div class="p-1 col-4 ">
                                            <div>@Model.CompletedHours</div>
                                        </div>
                                        <div class="p-1 col-4 ">
                                            <div>@Model.user.City.Country.CountryName , @Model.user.City.CityName</div>
                                        </div>

                                    </div>
                                </div>
                                </div>
                                </div>
             </div>
                    <br />
             </div>
               
            </form>
            

             <div class="col-sm-2"></div>

        </div>
       
    </div>
</body>
@section Scripts{


    <script>
        $(function () {
            // Sidebar toggle behaviorr
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar, #content').toggleClass('active');
            });
        });

    </script>


    }


