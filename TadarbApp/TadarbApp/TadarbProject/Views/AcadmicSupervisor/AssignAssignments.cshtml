@{
    ViewData["Title"] = "قائمة الطلاب ";
}

<head>

    <link rel="stylesheet" href="~/css/Addbranches.css" asp-append-version="true" />


</head>

<partial name="_Notification" />
<body style="background: linear-gradient(#1c4c64,#5590ad);">

    <div class="row">
        <div class="col-sm-4" style="z-index:2;">

            <div class="vertical-nav bg-white" id="sidebar">
                <div class="py-4 px-3 mb-4 bg-light">
                    <div class="media d-flex align-items-center">
                        <img src="~/@ViewBag.OrganizationImage" alt="..." width="65" class="mr-3 rounded-circle img-thumbnail shadow-sm">
                        <div class="media-body">
                            <h4 class="m-0">@ViewBag.OrganizationName</h4>
                        </div>
                    </div>
                </div>
                <h5> مرحبا بك @ViewBag.Username </h5>

                <p class="text-gray font-weight-bold text-uppercase px-3 small pb-4 mb-0">القائمة</p>

                <ul class="nav flex-column bg-white mb-0">
                    <li class="nav-item">
                        <a asp-controller="Company" asp-action="Index" class="nav-link text-dark font-italic ">
                            <<i class="fa-solid fa-house  mr-3  fa-fw "></i>
                            الصفحة الرئيسية
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Company" asp-action="ViewSpecialities" class="nav-link text-dark font-italic bg-light">
                            <i class="fa-brands fa-buffer mr-3 text-primary  fa-fw  "></i>
                            إدارة مجالات التدريب
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Company" asp-action="viewUsers" class="nav-link text-dark font-italic ">
                            <i class="fa-solid fa-user-group "></i>
                            إدارة الموظفين

                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Company" asp-action="Viewbranches" class="nav-link text-dark font-italic ">
                            <i class="fa-solid fa-building  mr-3  fa-fw "></i>
                            إدارة الفروع
                        </a>
                    </li>

                </ul>
            </div>


            <!-- End vertical navbar -->
            <!-- Page content holder -->
            <div class="page-content p-1" id="content">
                <!-- Toggle button -->
                <button id="sidebarCollapse" type="button" class="btn btn-light bg-white rounded-pill shadow-sm px-4 mb-4"><i class="fa fa-bars mr-2"></i><small class="text-uppercase font-weight-bold">القائمة</small></button>
            </div>


        </div>
        <div class="col-sm-6">
            <div class="card" style="border-radius: 25px; height:auto; width:auto; margin-top:0.5cm; margin-bottom:3cm; padding:8px 8px 8px 8px ; border-color:black;background-color:#dfebf2">
                <div class="card-body p-5">
                    <h2 class=" text-center mb-5">اختيار المجالات المراد تقديم التدريب فيها</h2>


                    <div class="row">
                        <div class="col-md-6 mb-4 pb-2">


                            <div class="form-group  mb-4 pb-2">
                                <label for="MasterFieldsID" class="form-label mt-4" style="font-size:20px">اختيار المجال:</label>


                                <select asp-items="@ViewBag.DepartmentsAssessmentTypesList" class="form-select" id="DepartmentsAssessmentTypesSelect" required>
                                    <option selected disabled value="">--المجال العام--</option>

                                </select>
                            </div>

                        </div>
                        <div class=" mb-4 pb-2">
                            <div class="container">
                                <div class="row">
                                    <div>
                                        <label for="MainBranchCity" class="form-label mt-4" style="font-size:20px ;">الرجاء اختيار التخصصات المراد إضافتها:</label>
                                        <div class="container">
                                            <div class="row">
                                                <div class="mb-4 pb-2" style="OVERFLOW-Y:scroll;HEIGHT:200px;" dir="ltr">
                                                    <table class="table table-hover table-center" style="background-color:white;border-radius: 25px;" dir="rtl">
                                                        <thead style="color:#0b70a3 ; font-size:18px">
                                                            <tr>

                                                                <th>اسم التخصص:</th>

                                                                <th class="text-center">إضافة: </th>

                                                            </tr>
                                                        </thead>

                                                        <tbody id="Tbody">
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>


                <div class="d-flex justify-content-center">

                    <a class="btn btn-lg " style="background-color:#e6e291; font-size:18px;" onclick="AddSP()">حفظ</a>

                </div><br /><br />


            </div>
        </div>

    </div>

    <div class="col-sm-2"></div>

</body>
@section Scripts{



    <script>
        $(function () {
            // Sidebar toggle behavior
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar, #content').toggleClass('active');
            });
        });

        GetOldAss();
        function GetOldAss() {

            $(document).ready(function () {
                $.ajax({
                    type: "GET",
                    url: "@Url.Action("GetOldAssignAssignments")",
                    data: { Did: @ViewBag.DepartmentId },

                    dataType: "json",
                    success: function (data) {
                        var body = '';

                        for (var i = 0; i < data.departmentsAssessmentTypes.length; i++) {
                            body +=
                                "<tr> <td class='text-nowrap' ><div class='font-weight-600' > <div class='font-weight-600'>" + data.departmentsAssessmentTypes[i].assessmentType.assessmentTypeName +
                                "</div></div></td>"

                                + "<td class='text-center'>" +
                                "<input class='form-check-input' type='checkbox' value='" + + "'> <label>إضافة</label><td></tr>";
                        }

                        $("#Tbody").html(body);


                    }
                });
            });
        }



        function AddSP() {


            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    ADDAss();
                }
            })




        }


        function ADDAss() {

            var select = document.getElementById('DepartmentsAssessmentTypesSelect');
            var value = select.options[select.selectedIndex].value;
            var DasId = parseInt(value);

            $(document).ready(function () {

                $.ajax({
                    type: "POST",
                    url: "@Url.Action("AddStudentSemesterEvaluationMark")",
                    data: { Mid: @ViewBag.SemesterMasterId, DASid: DasId },

                    dataType: "json",
                    success: function (data) {

                        if (data.success) {
                            GetOldAss();
                        }





                    }
                });
            });

        }

    </script>


    }