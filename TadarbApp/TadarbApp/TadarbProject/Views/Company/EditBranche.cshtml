                        <input asp-for="Branch.Location" id="BLoc" hidden required />

                        <input asp-for="Branch.Zoon" id="BZoon" hidden required />


                        <input asp-for="Branch.Organization_OrganizationId"  hidden required />

                        <input asp-for="Branch.City_CityId"  hidden required />

                        <input asp-for="Branch.BranchId" hidden required />

                        <div class="invalid-feedback">
                            الرجاء تحديد موقع الفرع
                        </div>
                        <br /> <br />

                        <div class="d-flex justify-content-center">

                            <button asp-controller="Company" asp-action="EditBranche" asp-route-id="@Model.Branch.BranchId" type="submit" class="btn btn-lg " style="background-color:#e6e291; font-size:20px;">تعديل</button>

                        </div>



                    </form>

                </div>
            </div>

        </div>

        <div class="col-sm-2"></div>
    </div>
</body>

