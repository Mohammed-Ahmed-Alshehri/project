@model BranchVM


@{
    ViewData["Title"] = "تعديل معلومات الفرع";
}

<head>

    <link rel="stylesheet" href="~/css/Addbranches.css" asp-append-version="true" />

</head>
<body style="background: linear-gradient(#1c4c64,#5590ad);">

    <div class="row">
        <div class="col-sm-4" style="z-index:2;">

            <div class="vertical-nav bg-white" id="sidebar">
                <div class="py-4 px-3 mb-4 bg-light">
                    <div class="media d-flex align-items-center">
                        <img src="~/@ViewBag.OrganizationImage" alt="..." width="65" class="mr-3 rounded-circle img-thumbnail shadow-sm">
                        <div class="media-body">
                            <h4 class="m-0">@ViewBag.OrganizationName</h4>
                        </div>
                    </div>
                </div>

                <p class="text-gray font-weight-bold text-uppercase px-3 small pb-4 mb-0">القائمة</p>

                <ul class="nav flex-column bg-white mb-0">
                    <li class="nav-item">
                        <a asp-controller="Company" asp-action="Index" class="nav-link text-dark font-italic bg-light">
                            <i class="fa fa-th-large mr-3 text-primary fa-fw"></i>
                            الصفحة الرئيسية
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Company" asp-action="ViewSpecialities" class="nav-link text-dark font-italic bg-light">
                            <i class="fa fa-address-card mr-3 text-primary fa-fw"></i>
                            إدارة مجالات التدريب
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Company" asp-action="viewUsers" class="nav-link text-dark font-italic bg-light">
                            <i class="fa fa-cubes mr-3 text-primary fa-fw"></i>
                            إدارة مسؤولين الفروع

                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Company" asp-action="Viewbranches" class="nav-link text-dark font-italic bg-light">
                            <i class="fa fa-cubes mr-3 text-primary fa-fw"></i>
                            إدارة الفروع
                        </a>
                    </li>
                   
                </ul>

            </div>

            <!-- End vertical navbar -->
            <!-- Page content holder -->
            <div class="page-content p-1" id="content">
                <!-- Toggle button -->
                <button id="sidebarCollapse" type="button" class="btn btn-light bg-white rounded-pill shadow-sm px-4 mb-4"><i class="fa fa-bars mr-2"></i><small class="text-uppercase font-weight-bold">القائمة</small></button>
            </div>


        </div>

        <div class="col-sm-6">

            <input asp-for="Branch.organization.OrganizationId" hidden />


            <div class="card" style="border-radius: 25px; margin-top:2cm; margin-bottom:3cm; padding:5px 5px 5px 5px ; border-color:black;background-color:#dfebf2">
                <div class="card-body p-5">
                    <h2 class=" text-center mb-5">تعديل معلومات الفرع</h2>

                    <form method="post" asp-controller="Company" asp-action="EditBranche" class="needs-validation" novalidate>
                        <div class="row">
                            <div class=" mb-2 pb-2">
                                <br />

                                <div class="form-outline" style="text-align: right;">
                                    <i class="fa-regular fa-address-card"></i>
                                    <label class="form-label" for="BranchName" style="font-size:20px;">اسم الفرع</label>
                                    <input type="text" asp-for="Branch.BranchName" id="BranchNameID" class="form-control form-control-lg"  required />

                                    <div class="invalid-feedback" style="text-align: right;"> الرجاء إدخال اسم الفرع </div>

                                </div>


                            </div>

                        </div>


                        <div class="form-outline" style="text-align: right;">
                            <i class="fa-regular fa-address-card"></i>
                            <label class="form-label" for="BranchCountry" style="font-size:20px;">الدولة</label>
                            
                            <input type="text" asp-for="@Model.CountryListItems.First().Text" id="BranchCountry" class="form-control form-control-lg" disabled required />

                            <div class="invalid-feedback" style="text-align: right;"> الرجاء إدخال اسم الدولة </div>

                        </div>
                        <div class="form-outline" style="text-align: right;">
                            <i class="fa-regular fa-address-card"></i>
                            <label class="form-label" for="BranchCity" style="font-size:20px;">المدينة</label>
                
                            <input type="text" asp-for="@Model.CityListItems.First().Text " id="BranchCityID" class="form-control form-control-lg" disabled required />

                            <div class="invalid-feedback" style="text-align: right;"> الرجاء إدخال اسم المدينة </div>

                        </div>


                        <div class="mb-2 pb-2">
                            <i class="fa-solid fa-user"></i>
                            <label for="3" class="form-label mt-4" style="font-size:20px;"> اسم المسؤول</label>
                            <select asp-for="Branch.Responsible_UserId" asp-items="@Model.UserListItems" class="form-select" id="UseryNameID" required>
                          
                            </select>

                            <div class="invalid-feedback">
                                الرجاء اختيار اسم المسؤول
                            </div>

                        </div>
                        
