@model UserAcount

@{
    ViewData["Title"] = "تسجيل الدخول";
}
<head>
    

    <!-- boosteatch CSS -->

    <link rel="stylesheet" href="~/css/boostwatch.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />


</head>
<div class="container" style="direction:ltr">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 30px; margin-top:3cm; margin-bottom:5cm; padding:10px 5px 20px 5px ;  background-color:#1c4c64 ">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-9 col-lg-6 col-xl-5" >

                                <img src="~/Images/T.png"
                                     class="img-fluid" alt="Sample image">

                            </div>
                            <div class=" col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1" >

                                <p class="text-center h3 fw-bold mb-5 mx-1 mx-md-4 mt-4" style="color:white;   font-size:40px;">تسجيل الدخول</p>

                                <form method="post" asp-action="Login" class="mx-1 mx-md-4 needs-validation" novalidate >

                                    <div class="d-flex flex-row align-items-center mb-4" style="color:white;">
                                        <div class="form-outline flex-fill mb-0" style="text-align: right;">
                                           

                                            <label class="form-label" for="form3Example1c" style="text-align: right; font-size:20px; ">البريد الإلكتروني</label>
                                            &nbsp
                                            <i class="fa-solid fa-envelope-circle-check fa-x10" ></i>

                                            <input asp-for="UserEmail" type="email" id="form3Example1c" class="form-control" placeholder="البريد الالكتروني" required dir="rtl" />
                                            @*                                                <span asp-validation-for="@Model.UserEmail" class="text-danger" style="text-align: right;"></span>
                                            *@
                                            <div class="invalid-feedback" style="text-align: right;"> الرجاء إدخال البريد الإلكتروني </div>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4" style="color:white;" >
                                        <div class="form-outline flex-fill mb-0">
                                            <div class="form-label"  style="text-align: right; font-size:20px;">
                                                <label class="form-label" for="form3Example3c" style="text-align: right; font-size:20px;">كلمة المرور</label>

                                                                                    &nbsp

                                            <i class="fa-solid fa-lock " ></i>
                                                <input type="password" asp-for="UserPassword" id="form3Example3c" class="form-control" placeholder="كلمة المرور" required dir="rtl" />
                                            
                                            <div class="invalid-feedback" style="text-align: right;"> الرجاء إدخال كلمة المرور </div>
                                        </div>
                                        </div>
                                    </div>

                                   <br />
                                   <br />


                                    <div class="col-auto d-flex align-items-center" dir="rtl" style="color:white;">
                                        <div class="custom-control custom-checkbox,text-right">
                                            <input type="checkbox" class="custom-control-input,text-right" id="cb1">
                                            <label for="cb1" style="font-size:20px;">تذكرني</label>
                                        </div>
                                    </div>
                                    <br />

                                    
                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="submit" class="btn btn-lg " style="background-color:#e6e291; font-size:18px;">تسجيل الدخول</button>
                                    </div>

                                </form>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }

    <script>

        // Example starter JavaScript for disabling form submissions if there are invalid fields
        (function () {
            'use strict'

            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.querySelectorAll('.needs-validation')

            // Loop over them and prevent submission
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()


    </script>

}
