@model IEnumerable<Organization>
@{
    ViewData["Title"] = "الصفحة الرئيسية";
}
<head>
   



    <style>
        .dash-count {
            text-align: center;
        }

        .carddd:hover {
            background-color: rgba(122, 122, 122, 0.5);
        }
    </style>
</head>



<div class="content container-fluid">
    <div class="row">
        <div class="col-xl-3 col-sm-3 col-12"> </div>

        <div class="col-xl-3 col-sm-3 col-12">


            <div class="card carddd" type="button" value="uni" onclick="location.href='https://localhost:44367/admin/?TypeId=1';">
                <div class="card-body">
                    <div class="dash-widget-header">


                        

                        <div class="dash-count">


                            <img src="/images/school.png">
                            <h1>الجامعات</h1>
                            <h3> 5,500</h3>



                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-sm-3 col-12">

            <div class="card carddd" type="button" value="comp" onclick="location.href='https://localhost:44367/admin/?TypeId=2';">

                <div class="card-body">
                    <div class="dash-widget-header">



                        <div class="dash-count">

                            <img src="/images/office-building.png">
                            <h1>الشركات</h1>
                            <h3> 10,555</h3>


                        </div>
                    </div>
                </div>
            </div>


        </div>

        <div class="col-xl-3 col-sm-3 col-12"> </div>


    </div>
    <div class="row">
        <div class="col-md-12 d-flex">

            <div class="card card-table flex-fill">
                <div class="card-header">
                    <h4 class="card-title float-start">
                    </h4>
                    <form asp-action="index" method="get">
                        <div class="table-search float-end">
                            <input type="text" class="form-control" placeholder="Search">

                        </div>
                        <div class="table-search float-end">
                            <button class="btn  btn-outline-secondary" type="submit"><i class="fa fa-search"></i></button>
                        </div>
                    </form>
                    <div class="table-search float-end">
                        <select class="form-select " style="text-align: right" id="stauts" name="stauts">
                            <option value="" disabled selected> -الحالة</option>

                            <option value="Active"> </option>

                            <option value="non-Active" onclick="location.href='https://localhost:44367/admin/?TypeId=2';">غير نشط</option>
                            <option value="reject" onclick="location.href='https://localhost:44367/admin/?TypeId=2';"> مرفوض</option>

                        </select>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive no-radius">

                        <table class="table table-hover table-center">
                            <thead>
                                <tr>

                                    <th>التفاصيل</th>
                                    <th>الحالة</th>
                                    <th class="text-center">تاريخ الانضمام</th>
                                    <th class="text-center">الاسم</th>
                                    <th class="text-end">الشعار</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                   

                                    var stat = @item.ActivationStatus;

                                    <tr>
                                        <td class="text-nowrap">
                                            <div class="font-weight-600">
                                                <button type="button" class="btn btn-outline-primary" fdprocessedid="ezqldw">تفاصيل اكثر</button>

                                            </div>
                                        </td>
                                        @if (stat == "Active")
                                        {
                                            <td class="text-nowrap text-success ">نشط</td>
                                        }
                                        @if (stat == "Not_Active")
                                        {
                                            <td class="text-nowrap text-warning ">غير نشط</td>
                                        }
                                        @if (stat == "Reject")
                                        {
                                            <td class="text-nowrap text-danger ">مرفوض</td>

                                        }


                                        <td class="text-center"> @item.SubscriptionDate</td>
                                        <td class="text-center">
                                            @item.OrganizationName
                                        </td>
                                        <td class="text-end">
                                            <div class="font-weight-600 ">  @item.CommercialRegistrationNumber</div>
                                        </td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>


@section Scripts{

  <script>

        

    </script>
}

